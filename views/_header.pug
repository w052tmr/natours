header.header
    nav.nav.nav--tours
        a.nav__el(href='/') All tours
    .nav.header__logo
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--user
        if (user)
            a.nav__el#logout Logout
            a.nav__el(href='/accountSettings')
                img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name.split(' ')[0]}`)
                span= user.name.split(' ')[0]
        else
            a.nav__el.nav__el--login(href='/login') Log in
            a.nav__el.nav__el--cta(href='/signup') Sign up